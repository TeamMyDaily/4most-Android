<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="org.mydaily">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".MyDailyApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.MyDaily">
        <activity android:name=".ui.view.daily.detail.DailyAddActivity" />
        <activity
            android:name=".ui.view.keyword.settings.KeywordSettingsActivity"
            android:exported="true" />
        <activity android:name=".ui.view.goal.detail.GoalAddActivity" />
        <activity
            android:name=".ui.view.keyword.KeywordAddActivity"
            android:windowSoftInputMode="adjustPan" />
        <activity
            android:name=".ui.view.keyword.detail.KeywordListActivity"
            android:exported="true"
            android:windowSoftInputMode="stateAlwaysHidden" />
        <activity
            android:name=".ui.view.keyword.detail.KeywordPopupActivity"
            android:windowSoftInputMode="stateAlwaysHidden"
            android:exported="true"/>
        <activity android:name=".ui.view.keyword.KeywordSelectActivity"
            android:exported="true"
            android:windowSoftInputMode="stateAlwaysHidden"/>
        <activity
            android:name=".ui.view.daily.detail.DailyDetailActivity"
            android:windowSoftInputMode="adjustPan" />
        <activity
            android:name=".ui.view.signin.SignInActivity"
            android:exported="true" />
        <activity
            android:name=".ui.view.goal.detail.GoalDetailActivity"
            android:exported="true"
            android:windowSoftInputMode="adjustResize" />
        <activity
            android:name=".ui.view.signup.SignUpActivity"
            android:exported="true"
            android:windowSoftInputMode="adjustPan" />
        <activity
            android:name=".ui.view.signup.SignUpTermsActivity"
            android:exported="true" />
        <activity android:name=".ui.view.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>