<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/report_gray" />
            <size android:height="8dp" android:width="296dp"/>
            <stroke android:color="@color/white" android:width="5dp"/>
            <corners android:radius="15dp"/>
        </shape>
    </item>
    <item>
        <clip>
            <shape android:shape="rectangle">
                <size android:height="8dp" android:width="296dp"/>
                <corners android:radius="15dp"/>
                <stroke android:color="@color/white" android:width="5dp"/>
                <gradient android:startColor="@color/mainOrange" android:centerColor="@color/mainPaleOrange" android:endColor="@color/mainPaleOrange" android:angle="0"/>
            </shape>
        </clip>
    </item>

</layer-list>