<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <FrameLayout
        android:id="@+id/fl_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginVertical="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/tv_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="-16dp"
            android:alpha="0.3"
            android:text="01"
            android:textColor="@color/mainAlto"
            android:textSize="60sp"
            android:textStyle="bold" />

    </FrameLayout>

    <TextView
        android:id="@+id/tv_number_of_task"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="14dp"
        android:text="4"
        android:textColor="@color/mainLightOrange"
        android:textSize="12sp"
        app:layout_constraintStart_toEndOf="@+id/fl_number"
        app:layout_constraintTop_toTopOf="@+id/fl_number" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="개의 기록"
        android:textColor="@color/mainLightOrange"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="@+id/tv_number_of_task"
        app:layout_constraintStart_toEndOf="@+id/tv_number_of_task"
        app:layout_constraintTop_toTopOf="@+id/tv_number_of_task" />

    <TextView
        android:id="@+id/tv_report_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="아웃풋"
        android:textColor="@color/mainBlack"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@+id/tv_number_of_task"
        app:layout_constraintTop_toBottomOf="@+id/tv_number_of_task"
        app:layout_goneMarginTop="8dp" />


    <ImageButton
        android:id="@+id/ib_spinner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:background="@android:color/transparent"
        android:src="@drawable/ic_arrow_down"
        android:tint="@color/mainAlto"
        app:layout_constraintBottom_toBottomOf="@+id/tv_report_name"
        app:layout_constraintStart_toEndOf="@+id/tv_report_name"
        app:layout_constraintTop_toTopOf="@+id/tv_report_name" />

    <ImageButton
        android:id="@+id/ib_plus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="24dp"
        android:background="@android:color/transparent"
        android:src="@drawable/ic_plus"
        app:layout_constraintBottom_toBottomOf="@+id/fl_number"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/fl_number" />


</androidx.constraintlayout.widget.ConstraintLayout>